<%- include('../includes/head.ejs') %>
</head>
<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <form class="product-form"
      action="/admin/<%= isEdit ? 'edit-product' : 'addproduct' %>"
      method="POST">
      <div class="form-control">
        <label for="title">Product Title</label>
        <input type="text" name="title" id="title"
          value="<%= isEdit && product ? product.title : '' %>"
        />
      </div>
      <div class="form-control">
        <label for="Product Description">Product Description</label>
        <textarea name="description" id="description" rows="6"><%= isEdit && product ? product.description : '' %></textarea>
      </div>
      <div class="form-control">
        <label for="Product Price">Product Price</label>
        <input type="number" name="price" id="price"
          value="<%= isEdit && product ? product.price : '' %>"
        />
      </div>
      <div class="form-control">
        <label for="Product image url">Product Image Url</label>
        <input type="text" name="imageUrl" id="imageUrl"
          value="<%= isEdit && product ? product.imageUrl : '' %>"
        />
      </div>
      <% if(isEdit) { %>
        <input type="hidden" value="<%= product.id %>" name="productId" />
         <% } %>
    <button type="submit">
        <%= isEdit ? 'Save Changes' : 'Add Product' %>
      </button>
    </form>
  </main>

  <%- include('../includes/end.ejs') %>
</body>
